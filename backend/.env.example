# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/nextstep
# Or use MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/nextstep

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# Encryption Key for GitHub tokens (MUST be a fixed 64-character hex string)
# Generate one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your_64_character_hex_encryption_key_here_change_this

# CORS Configuration
FRONTEND_URL=http://localhost:5173

# Code Execution Service (Optional - for code arena)
CODE_EXECUTION_API_URL=https://emkc.org/api/v2/piston
# Or use your own Judge0 instance

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Email Notification Configuration
# Using Gmail (recommended):
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
# Note: For Gmail, you need to create an App Password:
# 1. Go to https://myaccount.google.com/security
# 2. Enable 2-Step Verification
# 3. Go to App passwords and create one for "Mail"

# Alternative: Use direct SMTP settings
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
